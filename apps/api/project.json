{ 
  "root": "apps/api",
  "sourceRoot": "apps/api/src",
  "projectType": "application",
  "targets": {
    "ddb-install": {
      "executor": "@nrwl/workspace:run-commands",
          "options": {
            "commands": [
              {
                "command": "sls dynamodb install"
              }
          ]
      }
    },
    "ddb-start": {
      "executor": "@nrwl/workspace:run-commands",
          "options": {
            "commands": [
              {
                "command": "sls dynamodb start"
              }
          ]
      }
    },
    "sls-start": {
      "executor": "@nrwl/workspace:run-commands",
          "options": {
            "commands": [
              {
                "command": "cross-env NO_COLOR= cross-env IS_NOT_SLS= npx sls offline start"
              }
          ]
      }
    },
    "sls-deploy-production": {
      "executor": "@nrwl/workspace:run-commands",
          "options": {
            "commands": [
              {
                "command": "NODE_ENV=production npx sls deploy --stage production --region eu-north-1 --verbose"
              }
          ]
      }
    },
    "generate": {
      "executor": "@nrwl/workspace:run-commands",
          "options": {
            "commands": [
              {
                "command": "ts-node apps/api/genres.ts -- \"apps/api/src/app/**/*.schema.ts\" \"apps/api/resource/dynamodb.yml\""
              }
          ]
      }
    },
    "build": {
      "executor": "@nrwl/node:webpack",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/api",
        "main": "apps/api/src/main.ts",
        "tsConfig": "apps/api/tsconfig.app.json",
        "assets": ["apps/api/src/assets"]
      },
      "configurations": {
        "production": {
          "optimization": true,
          "extractLicenses": true,
          "inspect": false,
          "fileReplacements": [
            {
              "replace": "apps/api/src/environments/environment.ts",
              "with": "apps/api/src/environments/environment.prod.ts"
            }
          ]
        }
      }
    },
    "serve": {
      "executor": "@nrwl/node:node",
      "options": {
        "buildTarget": "api:build"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/api/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/apps/api"],
      "options": {
        "jestConfig": "apps/api/jest.config.js",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
